<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-[#0F0F0F] text-white py-5 font-orbitron">
  <div class="nav flex justify-between items-center px-4">
    <h3 class="text-lg"><%= userprofile.username %></h3>
    <div class="icons flex gap-5">
      <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
      <i class="text-[1.4rem] ri-menu-line"></i>
    </div>
  </div>

  <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
    <div
      class="w-[19vw] h-[19vw] -ml-3 bg-zinc-700 rounded-full overflow-hidden"
    >
      <img
        class="h-full w-full object-cover object-center"
        src="/images/uploads/<%= userprofile.picture %>"
        alt=""
      />
    </div>
    <div class="stats -mr-3 flex gap-5 items-center justify-between">
      <div class="flex flex-col items-center justify-center">
        <h3><%= userprofile.posts.length %></h3>
        <h4 class="text-xs text-zinc-400">Posts</h4>
      </div>
      <div class="flex flex-col items-center justify-center">
        <h3><%= userprofile.followers.length %></h3>
        <h4 class="text-xs text-zinc-400">Followers</h4>
      </div>
      <div class="flex flex-col items-center justify-center">
        <h3><%= userprofile.followings.length %></h3>
        <h4 class="text-xs text-zinc-400">Followings</h4>
      </div>
    </div>
  </div>

  <div class="dets px-6 mt-5">
    <h3 class="text-lg mb-1"><%= userprofile.name %></h3>
    <p class="text-xs tracking-tight opacity-50"><%= userprofile.bio %></p>
  </div>

  <div class="px-6 mt-5 flex items-center justify-center gap-4">
    <% if(user.followings.indexOf(userprofile._id) === -1){ %>
    <a
      class="px-8 py-2 bg-[#7F5AF0] text-xs rounded-md hover:bg-[#6d48e7] transition-all duration-200"
      href="/follow/<%= userprofile._id %>"
      >Follow</a
    >
    <% } else { %>
    <a
      class="px-8 py-2 bg-zinc-800 text-xs rounded-md hover:bg-zinc-700 transition-all duration-200"
      href="/follow/<%= userprofile._id %>"
      >Following</a
    >
    <% } %>
    <a
      class="px-8 py-2 bg-zinc-800 text-xs rounded-md hover:bg-zinc-700 transition-all duration-200"
      href="#"
      >Message</a
    >
  </div>

  <div class="posts w-full flex gap-1 py-2 mt-5 flex-wrap px-2">
    <% if(userprofile.posts.length>0){ %> <%
    userprofile.posts.forEach(function(post){ %>
    <div class="post w-[32.5%] h-32 bg-zinc-700 overflow-hidden rounded-md">
      <img
        class="h-full w-full object-center object-cover"
        src="/images/uploads/<%= post.picture %>"
        alt=""
      />
    </div>
    <% }) %> <% } else { %>
    <div class="h-[20vh] flex justify-center w-full">
      <h2 class="text-sm capitalize opacity-70 mt-7">no posts yet !!</h2>
    </div>
    <% } %>
  </div>
</div>
<% include ./partials/footer.ejs %>

<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
<style>
  .font-dm {
    font-family: 'DM Sans', sans-serif;
  }
</style>

