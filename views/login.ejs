<% include ./partials/header.ejs %>

<!-- Page Wrapper -->
<div
  class="w-full min-h-screen bg-[#0F0F0F] text-white py-5 flex flex-col items-center justify-center font-orbitron"
>
  <!-- Logo Title -->
  <div class="flex flex-col items-center gap-5 px-4 animate-fade-in">
    <h1
      class="text-4xl font-bold text-[#7F5AF0] tracking-widest animate-bounce-slow"
    >
      SOCIAL SPHERE
    </h1>

    <!-- Login Form -->
    <form class="w-full animate-fade-in-slow" action="/login" method="post">
      <input
        class="px-3 mt-2 py-2 border border-[#292929] rounded-md block w-full bg-[#1A1A1A] focus:outline-none focus:border-[#7F5AF0] transition"
        type="text"
        placeholder="username"
        name="username"
      />
      <input
        class="px-3 mt-3 py-2 border border-[#292929] rounded-md block w-full bg-[#1A1A1A] focus:outline-none focus:border-[#7F5AF0] transition"
        type="password"
        placeholder="password"
        name="password"
      />
      <input
        class="w-full bg-[#7F5AF0] hover:bg-[#6d48e7] text-white px-3 py-3 rounded-md mt-4 transition duration-200 cursor-pointer"
        type="submit"
        value="Log In"
      />
    </form>

    <!-- Signup Redirect -->
    <span class="text-sm opacity-80 mt-2">
      Don't have an account?
      <a href="/" class="text-[#7F5AF0] hover:underline">Sign Up</a>
    </span>
  </div>
</div>

<!-- Footer -->
<% include ./partials/footer.ejs %>

<!-- Google Font -->
<link
  href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap"
  rel="stylesheet"
/>

<!-- Animations (Tailwind custom classes or CSS below) -->
<style>
  @keyframes bounce-slow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-6px);
    }
  }

  .animate-bounce-slow {
    animation: bounce-slow 2.5s ease-in-out infinite;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }

  .animate-fade-in-slow {
    animation: fade-in 1.5s ease-out forwards;
  }

  .font-orbitron {
    font-family: "Orbitron", sans-serif;
  }
</style>
