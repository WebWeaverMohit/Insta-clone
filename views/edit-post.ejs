<% include ./partials/header.ejs %>
<div class="w-full h-12 bg-black flex items-center justify-start px-4">
    <a class="text-blue-400" href="/profile">Profile</a>
</div>
<div class="h-screen w-full bg-zinc-600 flex flex-col items-center justify-center">
    <form class="flex flex-col items-center justify-center" action="/editcaption/<%= post.id %>" method="post">
        <div class="h-56 w-56 bg-black mb-5 overflow-hidden">
            <img class="h-full w-full rounded-md object-center object-cover" src="/images/uploads/<%= post.picture %>" alt="">
        </div>
        <input class="w-56 h-18 rounded-lg outline-none whitespace-pre-line mb-7 overflow-hidden bg-white px-4 py-2 text-black mt-10 text-sm" type="text" name="caption" value="<%= post.caption %>" placeholder="Enter-Caption">
        <input class="px-2 py-1 bg-blue-500 rounded-lg text-white text-medium" type="submit" value="Change">
    </form>
</div>
<% include ./partials/footer.ejs %>