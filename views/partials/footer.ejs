<% if(footer){ %>
  <div class="footer text-white flex justify-between items-center w-full fixed bottom-0 z-[10] bg-[#0F0F0F] px-8 py-3 shadow-[0_-2px_10px_rgba(127,90,240,0.2)] transition-all duration-300">
    
    <!-- Home Icon -->
    <a href="/feed" class="hover:text-[#7F5AF0] transition duration-200">
      <i class="text-[1.5rem] ri-home-line"></i>
    </a>

    <!-- Search Icon -->
    <a href="/search" class="hover:text-[#7F5AF0] transition duration-200">
      <i class="text-[1.5rem] ri-search-line"></i>
    </a>

    <!-- Upload Icon -->
    <a href="/upload" class="hover:text-[#7F5AF0] transition duration-200">
      <i class="text-[1.5rem] ri-add-box-line"></i>
    </a>

    <!-- Profile Picture -->
    <a href="/profile" class="group">
      <div class="w-9 h-9 rounded-full overflow-hidden border-2 border-transparent group-hover:border-[#7F5AF0] transition duration-300">
        <img class="h-full w-full object-center object-cover" src="/images/uploads/<%= user.picture %>" alt="profile">
      </div>
    </a>

  </div>
<% } %>
</body>
</html>
