<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-[#0F0F0F] text-white py-5 font-orbitron">
  <div class="w-full px-4 flex items-center justify-between">
    <h1 class="text-2xl text-[#7F5AF0] font-bold">SOCIAL SPHERE</h1>
    <div class="icons flex gap-5 items-center">
      <a href="/notifications"><i class="text-[1.4rem] ri-heart-3-line"></i></a>
      <a href="/message"><i class="text-[1.4rem] ri-messenger-line"></i></a>
    </div>
  </div>

  <div class="story px-3 flex gap-3 overflow-auto mt-5">
    <a href="user/story/<%= stories.id %>">
      <div class="circle flex-shrink-0">
        <div
          class="gradient w-[18vw] h-[18vw] rounded-full bg-gradient-to-r from-[#7F5AF0] to-orange-500 flex items-center justify-center"
        >
          <div class="inner w-[92%] h-[92%] rounded-full overflow-hidden">
            <img
              class="w-full h-full object-cover"
              src="/images/uploads/<%= user.picture %>"
              alt=""
            />
          </div>
        </div>
        <h3 class="text-center mt-1 text-sm"><%= user.username %></h3>
      </div>
    </a>

    <% stories.forEach(function(story){ %> <% if
    (user.followings.includes(story.user._id)) { %>
    <a href="/otheruser/story/<%= story.id %>">
      <div class="circle flex-shrink-0">
        <div
          class="gradient w-[18vw] h-[18vw] rounded-full bg-gradient-to-r from-[#7F5AF0] to-orange-500 flex items-center justify-center"
        >
          <div class="inner w-[92%] h-[92%] rounded-full overflow-hidden">
            <img
              class="w-full h-full object-cover"
              src="/images/uploads/<%= story.user.picture %>"
              alt=""
            />
          </div>
        </div>
        <h3 class="text-center mt-1 text-sm"><%= story.user.username %></h3>
      </div>
    </a>
    <% } %> <% }) %>
  </div>

  <div class="posts parent mb-20">
    <% posts.reverse().forEach(function(post){ %>
    <div class="post mt-5 w-full min-h-[50vh]">
      <div class="title px-4 flex items-center gap-2">
        <div class="w-[8vw] h-[8vw] bg-[#1A1A1A] rounded-full overflow-hidden">
          <img
            class="h-full w-full object-cover"
            src="/images/uploads/<%= post.user.picture %>"
            alt=""
          />
        </div>
        <h4 class="text-sm"><%= post.user.username %></h4>
        <h6 class="text-xs opacity-30"><%= dater(new Date(post.date)) %></h6>
      </div>

      <div class="relative w-full h-96 mt-4 bg-[#1A1A1A]">
        <img
          data-postid="<%= post.id %>"
          class="postimg h-full w-full object-cover"
          src="/images/uploads/<%= post.picture %>"
          alt=""
        />
      </div>

      <div
        class="options w-full px-4 flex justify-between items-center text-[1.4rem]"
      >
        <div class="flex gap-3 mt-2">
          <% if(post.likes.indexOf(user._id)===-1){ %>
          <i class="heart ri-heart-3-line"></i>
          <% } else { %>
          <i class="heart ri-heart-3-fill text-red-500"></i>
          <% } %>
          <i data-id="<%= post._id %>" class="commentIcon ri-chat-3-line"></i>
          <i class="ri-share-circle-line"></i>
        </div>
        <% if(user.saved.indexOf(post._id)===-1){ %>
        <i data-postid="<%= post._id %>" class="save ri-bookmark-line"></i>
        <% } else { %>
        <i data-postid="<%= post._id %>" class="save ri-bookmark-fill"></i>
        <% } %>
      </div>

      <h3 class="likeval px-4 mt-2 text-sm tracking-tight">
        <%= post.likes.length %> likes
      </h3>
      <h2 class="text-sm font-light mt-2 px-4">
        <span class="font-semibold"><%= post.user.username %></span> <%=
        post.caption %>
      </h2>

      <div class="w-full px-4 py-2 mb-2">
        <% post.comments.forEach(comment=> { %>
        <div class="cmtdv mb-2">
          <p class="text-sm">
            <strong><%= comment.username %></strong> <%= comment.text %>
          </p>
        </div>
        <% }); %>
      </div>

      <div class="commentContainer">
        <div id="commentdiv_<%=post._id%>" class="hidden">
          <form
            id="commentForm"
            onsubmit="submitCommentHandler(event, '<%= post._id %>')"
            class="flex h-14 items-center justify-between pl-2"
            action="/posts/<%= post._id %>/comments"
            method="post"
          >
            <div class="mb-4 overflow-hidden">
              <textarea
                id="textarea"
                class="w-64 rounded-lg px-4 py-2 h-12 mt-5 bg-[#292929] text-white"
                name="text"
                placeholder="Add a comment"
              ></textarea>
            </div>
            <div>
              <button
                id="submitComment"
                type="submit"
                class="bg-[#7F5AF0] hover:bg-[#6d48e7] text-white px-4 py-2 rounded-lg transition"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</div>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
<style>
  .font-dm {
    font-family: 'DM Sans', sans-serif;
  }
</style>


<script
  src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
  integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.min.js"
  integrity="sha512-NQfB/bDaB8kaSXF8E77JjhHG5PM6XVRxvHzkZiwl3ddWCEPBa23T76MuWSwAJdMGJnmQqM0VeY9kFszsrBEFrQ=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<script>
  var hehe = 0;
  var commentIcon = document.querySelectorAll(".commentIcon");
  var commentFormDivs = document.querySelectorAll("#commentdiv");
  let pid;

  document.querySelectorAll(".commentIcon").forEach(function (icon) {
    icon.addEventListener("click", function () {
      const targetId = icon.getAttribute("hey");
      const postId = icon.getAttribute("data-id");
      pid = postId;
      const commentDiv = document.querySelector(`#commentdiv_${postId}`);

      if (hehe === 0) {
        commentDiv.style.display = "initial";
        hehe = 1;
      } else {
        commentDiv.style.display = "none";
        hehe = 0;
      }
    });
  });

  const commentForm = document.querySelector("#commentForm");

  const submitCommentHandler = async (event) => {
    const formData = new FormData(commentForm);
    const formDataObject = Object.fromEntries(formData.entries());

    try {
      const user = `<%= user %>`;

      const response = await axios.post(
        `/feed/${pid}/comments`,
        formDataObject
      );
      const data = response.data;

      const mergedObject = {
        ...formDataObject,
        author: data.author,
      };

      console.log(mergedObject);

      const commentHtml = `
      <div class="mb-2">
        <p class="text-sm"><strong>${data.author.username}:</strong> ${data.text}</p>
      </div>
    `;
      document.querySelector(".cmtdv").innerHTML += commentHtml;
    } catch (error) {
      console.error("Error:", error);
    }
  };

  document.addEventListener("DOMContentLoaded", async function () {
    const commentForm = document.querySelector("#commentForm");
    const commentIcon = document.getElementById("commentIcon");

    const submitComment = document.getElementById("submitComment");
    if (submitComment) {
      submitComment.addEventListener("click", async function (event) {
        event.preventDefault();
        await submitCommentHandler(event);
        // document.querySelector("#textarea").value = ""
        commentForm.style.display = "none";
        hehe = 0;
        console.log(hehe);
      });
    }
  });

  document.querySelector(".parent").addEventListener("click", function (dets) {
    if (dets.target.classList.contains("postimg")) {
      var post = dets.target.parentNode.parentNode;
      var heart = post.querySelector(".heart");
      if (heart.classList.contains("ri-heart-3-line")) {
        heart.classList.remove("ri-heart-3-line");
        heart.classList.add("ri-heart-3-fill");
        heart.classList.add("text-red-500");
      } else {
        heart.classList.remove("ri-heart-3-fill");
        heart.classList.remove("text-red-500");
        heart.classList.add("ri-heart-3-line");
      }
      fetch(`/like/${dets.target.dataset.postid}`)
        .then((raw) => raw.json())
        .then((response) => {
          console.log(response.likes.length);
          post.querySelector(".likeval").textContent =
            response.likes.length + " likes";
        });
      var icon = document.createElement("i");
      icon.classList.add("ri-heart-3-fill");
      icon.classList.add(
        "text-red-500",
        "text-7xl",
        "absolute",
        "top-1/2",
        "left-1/2",
        "-translate-x-[50%]",
        "z-[9]",
        "-translate-y-[50%]"
      );
      dets.target.parentNode.appendChild(icon);
      gsap.from(icon, {
        scale: 0.5,
        opacity: 0,
        duration: 0.4,
        y: 20,
      });
      gsap.to(icon, {
        scale: 0,
        y: -50,
        opacity: 0,
        delay: 0.4,
        duration: 0.5,
        onComplete: function () {
          dets.target.parentNode.removeChild(icon);
        },
      });
    } else if (dets.target.classList.contains("save")) {
      var id = dets.target.dataset.postid;
      fetch(`/save/${id}`)
        .then((raw) => raw.json())
        .then((result) => {
          if (dets.target.classList.contains("ri-bookmark-line")) {
            dets.target.classList.remove("ri-bookmark-line");
            dets.target.classList.add("ri-bookmark-fill");
          } else {
            dets.target.classList.remove("ri-bookmark-fill");
            dets.target.classList.add("ri-bookmark-line");
          }
        });
    }
  });
</script>
