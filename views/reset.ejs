<% include ./partials/header.ejs %>

<div class="flex items-center justify-center min-h-screen w-full bg-[#0F0F0F] px-4 font-orbitron">
  <div class="relative bg-[#1A1A1A] p-8 rounded-lg shadow-md max-w-md w-full text-white">

    <!-- ðŸ”™ Back Button -->
    <a href="javascript:history.back()" class="absolute top-4 left-4 text-white text-sm hover:text-[#7F5AF0] transition duration-200">
      <i class="ri-arrow-left-line mr-1"></i> Back
    </a>

    <h1 class="text-2xl font-semibold mb-6 text-center text-[#7F5AF0]">Reset Your Password</h1>

    <form action="/reset-password" method="post" class="space-y-4">
      
      <!-- Old Password -->
      <div>
        <label for="oldPassword" class="block text-sm mb-1">Old Password</label>
        <input type="password" id="oldPassword" name="oldPassword"
          class="w-full bg-[#292929] border border-[#3d3d3d] text-white p-2 rounded focus:outline-none focus:ring-2 focus:ring-[#7F5AF0]">
      </div>

      <!-- New Password -->
      <div>
        <label for="newPassword" class="block text-sm mb-1">New Password</label>
        <input type="password" id="newPassword" name="newPassword"
          class="w-full bg-[#292929] border border-[#3d3d3d] text-white p-2 rounded focus:outline-none focus:ring-2 focus:ring-[#7F5AF0]">
      </div>

      <!-- Confirm New Password -->
      <div>
        <label for="confirmNewPassword" class="block text-sm mb-1">Confirm New Password</label>
        <input type="password" id="confirmNewPassword" name="confirmNewPassword"
          class="w-full bg-[#292929] border border-[#3d3d3d] text-white p-2 rounded focus:outline-none focus:ring-2 focus:ring-[#7F5AF0]">
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit"
          class="w-full bg-[#7F5AF0] text-white p-2 rounded hover:bg-[#6d48e7] transition duration-300">Reset Password</button>
      </div>

    </form>

  </div>
</div>

