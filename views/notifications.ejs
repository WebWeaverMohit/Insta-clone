<% include ./partials/header.ejs %>

<div class="main min-h-screen w-full px-2 py-2 bg-[#0F0F0F] font-orbitron">
  <div class="nav relative flex items-center justify-between px-4 rounded-lg h-14 w-full bg-[#1A1A1A]">
    <a href="/feed">
      <i class="ri-arrow-left-s-line text-2xl text-[#7F5AF0] cursor-pointer"></i>
    </a>
    <h3 class="text-white text-lg font-semibold">Notifications</h3>
    <span></span>
  </div>

  <div class="notificationsArea mt-4">
    <% notifications.forEach(notification => { %>
      <li class="flex items-center py-3 px-4 border-b border-[#292929] transition duration-300 ease-in-out hover:bg-[#1A1A1A]
        <%= notification.isRead ? 'text-gray-500' : 'text-white' %>">
        <div class="flex-shrink-0 mr-4 text-xl">
          <% if (notification.type === 'follow') { %>
            üßë
          <% } else if (notification.type === 'like') { %>
            ‚ù§Ô∏è
          <% } else if (notification.type === 'comment') { %>
            üí¨
          <% } %>
        </div>
        <div class="text-sm">
          <% if (notification.type === 'follow') { %>
            <strong class="text-[#7F5AF0]"><%= notification.userId %></strong> started following you.
          <% } else if (notification.type === 'like') { %>
            <strong class="text-[#7F5AF0]"><%= notification.userId %></strong> liked your post.
          <% } else if (notification.type === 'comment') { %>
            <strong class="text-[#7F5AF0]"><%= notification.userId %></strong> commented on your post.
          <% } %>
        </div>
      </li>
    <% }); %>
  </div>
</div>

<% include ./partials/footer.ejs %>

<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
