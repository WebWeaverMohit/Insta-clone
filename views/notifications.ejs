<% include ./partials/header.ejs %>
<div class="main h-screen w-full px-2 py-2 bg-black">
    <div class="nav relative flex items-center justify-between px-4 rounded-lg h-14 w-full bg-zinc-600">
        <i class="ri-arrow-left-s-line text-4xl text-blue-500"></i>
        <h3 class="text-white text-lg">Notifications</h3>
    </div>
    <div class="notificationsArea">
        <% notifications.forEach(notification => { %>
          <li class="flex items-center py-2 px-4 border-b border-gray-300 transition duration-300 ease-in-out hover:bg-gray-100 
                      <%= notification.isRead ? 'text-gray-500' : 'text-black' %>">
            <div class="flex-shrink-0 mr-3">
              <span class="text-xl">
                <!-- Add an appropriate icon based on notification type -->
                <% if (notification.type === 'follow') { %>
                  &#128100; <!-- ðŸŽ‰ -->
                <% } else if (notification.type === 'like') { %>
                  &#x2764; <!-- â¤ï¸ -->
                <% } else if (notification.type === 'comment') { %>
                  ðŸ’¬
                <% } %>
              </span>
            </div>
            <div>
              <% if (notification.type === 'follow') { %>
                <%= notification.userId %> started following you.
              <% } else if (notification.type === 'like') { %>
                <%= notification.userId %> liked your post.
              <% } else if (notification.type === 'comment') { %>
                <%= notification.userId %> commented on your post.
              <% } %>
            </div>
          </li>
        <% }); %>
      </div>
      
</div>
<% include ./partials/footer.ejs %>